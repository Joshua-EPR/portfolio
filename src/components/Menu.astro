---
import photo from '../assets/photo.jpg';
---

<nav class="fixed scroll-smooth w-full h-20 bg-gradient-to-r from-blue-900 via-blue-700 to-blue-500/95 backdrop-blur-md text-white flex items-center justify-between px-8 shadow-2xl z-50 animate-fade-in-down">
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <div class="logo group">
    <a href="#" class="flex items-center gap-4">
      <img 
        src={photo.src} 
        alt="Logo" 
        class="w-14 h-14 rounded-full border-2 border-transparent group-hover:border-blue-400 transition-all duration-300 transform group-hover:scale-110 shadow-lg" 
      />
      <span class="text-2xl font-extrabold hidden sm:block text-white tracking-wide animate-gradient-x">Joshua <span class="text-blue-400">Peña</span></span>
    </a>
  </div>

  <!-- Botón para menú móvil -->
  <button id="menu-toggle" class="md:hidden text-white text-3xl hover:text-blue-400 transition-colors duration-300">
    <!-- <img class="w-10 h-10" src="https://i.postimg.cc/4yf8H0jS/menu-9685070.png" alt="Menu"/> -->
   <i class="fa-solid fa-bars fa-bounce w-10 h-10" style="color: #fff;"></i>
  </button>

  <!-- Menú -->
  <ul id="menu" class="hidden md:flex items-center space-x-8 text-lg font-semibold">
    {['Inicio', 'Sobre mí', 'Proyectos', 'Contáctame'].map((item) => (
      <li>
        <a 
          href={item === 'Contáctame' ? '#Contact' : (item === 'Sobre mí' ? '#AboutMe' : (item === 'Proyectos' ? '#Projects' : '#'))} 
          class="relative px-2 py-1 transition-colors duration-300 before:content-[''] before:absolute before:w-full before:h-0.5 before:bg-blue-400 before:bottom-0 before:left-0 before:scale-x-0 hover:before:scale-x-100 before:transition-transform before:duration-300"
        >
          {item}
        </a>
      </li>
    ))}
  </ul>

  <!-- Menú móvil (oculto por defecto) -->
  <ul id="mobile-menu" class="hidden absolute top-20 left-0 w-full bg-gradient-to-r from-blue-900 via-blue-700 to-blue-500/95 flex-col items-center py-4 space-y-4 text-lg font-semibold md:hidden transition-all duration-300">
    {['Inicio', 'Sobre mí', 'Proyectos', 'Contáctame'].map((item) => (
      <li>
        <a 
          href={item === 'Contáctame' ? '#Contact' : (item === 'Sobre mí' ? '#AboutMe' : (item === 'Proyectos' ? '#Projects' : '#'))} 
          class="block px-4 py-2 text-white transition-colors duration-300"
        >
          {item}
        </a>
      </li>
    ))}
  </ul>
</nav>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
      mobileMenu.classList.toggle('flex');
    });
  }

});
</script>
